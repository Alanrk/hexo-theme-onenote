<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover" name="viewport" />
    <link rel="alternate icon" type="image/png" href="<%- url_for('/img/favicon.png') %>">
    
    <!-- Title and Subtitle -->
    <title><%= page.title ? page.title + ' - ' + config.title : config.title %> - <%= config.subtitle %></title>
    
    <!-- Meta Tags -->
    <meta name="description" content="<%= config.description %>">
    <meta name="keywords" content="<%= config.keywords %>">
    <meta name="author" content="<%= config.author %>">
    <meta name="language" content="<%= config.language %>">
    
    <!-- CSS Files -->
    <%- css('css/reset.css') %>
    <%- css('css/style.css') %>
    <%- css('css/markdown.css') %>
    <%- css('css/a11y-dark.min.css') %>
    <%- css('css/custom.css') %>
    
    <!-- JavaScript Files -->
    <script src="<%= url_for('/js/highlight.min.js') %>"></script>
    <script src="<%= url_for('/js/highlightjs-line-numbers.js') %>"></script>
    <script src="<%= url_for('/js/copy-code.js') %>"></script>
</head>
